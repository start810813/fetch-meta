html
  head
    title= title
    meta(name="viewport" content="width=device-width,initial-scale=1")
    script(src="https://static.line-scdn.net/liff/edge/2/sdk.js")
    script(src='liff.js')
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC&display=swap" rel="stylesheet")
    style.
    
        body {
            padding: 15px;
            margin: 0;
            font-family: 'Noto Sans TC', sans-serif;
        }
        input {
            padding: 0 5px;
            width: 100%;
            height: 40px;
        }
        button {
            appearance: none;
            padding: 5px 20px;
            height: 40px;
            border-radius: 3px;
            font-size: 14px;
        }
        .blue-button {
            border: 2px #528AAE solid;
            background-color: #528AAE;
            color: #FFFFFF;
        }
        .blue-hollow-button {
            border: 2px #528AAE solid;
            background-color: #FFFFFF;
            color: #528AAE;
        }
        .input-container {
            width: 100%;
            margin-bottom: 15px;
        }
        .button-container {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
        }
        .button-container button {
            width: 100%;
        }
        .button-container button:not(:last-of-type) {
            margin-right: 10px;
        }
        .og-container {
            width: 100%;
            background-color: #D9F1FF;
            padding: 15px;
            box-sizing: border-box;
        }
        .image-container {
            width: 100%;
            overflow: scroll;
        }
        .image-container img {
            width: 100%;
        }
        .hidden {
            display: none;
        }
  body
    div.input-container
        input(type=text value="")#sharedUrl
    div.button-container
        button#liffLoginButton.blue-hollow-button 登入Line
        button#fetchButton.blue-hollow-button 預覽
        button#shareButton.blue-button 分享
    div.og-container
        h1#title
        p#description
        div#imageContainer.image-container
        div#shareResult
    